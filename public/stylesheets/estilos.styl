@import "normalize.styl"
@import "responsive.styl"
@import "icons.styl"

blanco = rgba(255,255,255,0.9)
azul   = #0188E1;
negro = #222

body
	background negro
/*  main-Header */
.main-Header
	font-family: 'Playfair Display', serif;
	background negro
	height 100%
	text-align center
	width 20%
	position fixed
	top 0
	color blanco
	.header-Imagen
		height auto
		position relative
		margin 0
		width auto
		img 
			box-shadow 9px 5px 1px #000
			border-radius 50%
			width 80%
		span 
			text-shadow -1.8px 1.5px 12.7px rgba(0,0,0,0.7)
			font-style italic
			width 100%
		p
			text-shadow -1.8px 1.5px 12.7px rgba(0,0,0,0.7)
			font-weight bold
			width 100%
	.header-Nav
		margin 1.2em 0
		.header-List
			padding 0
			margin 0
			.header-list-item
				border-top 1px solid blanco
				display inline-block
				width 100%
				a 
					text-shadow -1.8px 1.5px 12.7px rgba(255,255,255,0.3)
					display block
					width 100%
					height 100%
					padding 1em 0
					margin 0
					text-decoration none
					color blanco
					&:hover
						color black
						background #EEE		

.principal-Container
	position absolute
	top 0
	left 20%
	background negro
	width 80%
	.second-Header
		background negro
		position relative
		width 100%

		.second-Header-Principal
			position relative
			background: linear-gradient(-45deg, rgba(1,136,225,0) 2%, rgba(6,127,212,0) 5%, rgba(30,87,153,0.7) 19%, rgba(26,94,163,0.8) 21%, rgba(1,136,225,1) 33%, rgba(30,87,153,1) 42%, rgba(17,109,185,1) 46%, rgba(1,136,225,1) 51%, rgba(18,108,184,1) 59%, rgba(30,87,153,1) 65%, rgba(30,87,153,1) 72%, rgba(30,87,153,1) 75%, rgba(7,126,211,1) 83%, rgba(1,136,225,0.96) 85%, rgba(21,102,175,0.8) 94%, rgba(28,91,159,0) 97%, rgba(30,87,153,0) 98%); /* FF3.6+ */
			top 0
			width 100%

			.second-Header-Imagen
				position relative
				display block
				margin 0
				width 50%
				img
					position relative
					width 100%
				.second-Header-Description
					color blanco
					top 50%
					right -100%
					position absolute
					width 100%
					font-family: 'Playfair Display', serif;
					h1
						text-shadow -1.8px 1.5px 12.7px rgba(0,0,0,0.7)
						position relative
						top 0px
						right 10px
						margin 0
						font-style italic
						width 100%
					p
						text-shadow -1.8px 1.5px 12.7px rgba(0,0,0,0.7)
						font-style italic
						font-weight bold
						width 100%
						margin 0 0 1em 0
					a
						margin 4em 0
						border 1px solid rgba(0,0,0,0.4)
						text-shadow -1.8px 1.5px 12.7px rgba(0,0,0,0.7)
						box-shadow 4px 2px 1px #000
						border-radius 4px
						color black
						padding 2% 5%
						background azul
						text-decoration none
						&:hover
							color azul
							background blanco

		.second-Header-Services
			background negro
			text-align center
			width 100%
			.services-Item
				display inline-block
				text-align center
				vertical-align top
				position relative
				width 24%
				font-family: 'Playfair Display', serif;
				.services-Item-Title
					color #EEE
					text-shadow -1px 1.5px 12.7px rgba(0,0,0,0.7)
					margin 0 0 1em 0
					font-style italic
					font-size 1.4em
				.services-Item-Description
					font-family: 'Arimo', sans-serif;
					text-align left
					margin 1em
					padding 0 0 1em 0
					color blanco
	.container
		position relative
		top 0
		text-align center
		width 100%
		font-family: 'Playfair Display', serif;
		.container-Title
			text-shadow -1px 1.5px 12.7px rgba(0,0,0,0.7)
			color blanco		
			margin 0
		.container-Description
			font-family: 'Arimo', sans-serif;
			margin 0 0 2em 0
			color blanco
			font-weight normal
		.container-Link
			border 1px solid rgba(0,0,0,0.2)
			box-shadow 4px 2px 1px #000
			padding 1em 1.4em
			margin 1em 0
			background azul
			color blanco
			text-decoration none
			&:hover
				color black
				background blanco
		.container-item
			margin 4em 0 0 0
			background #222
			width 100%
			.item 
				font-family: 'Playfair Display', serif;
				display inline-block
				vertical-align top
				margin 2em 0 0 0
				width 20%
				.item-Imagen
					margin 0
					width 50%
					img
						width 100%
					.item-Image-Description
						width 100%
						margin 0
						color blanco
						h3
							font-family: 'Arimo', sans-serif;
							font-style italic
							margin 0
						p
							margin 0
						
.principal-CV
	position absolute
	top 0
	left 20%
	background blanco
	width 80%
.principal-Description
	text-align center
	position absolute
	top 0
	left 20%
	background blanco
	width 80%

	.description-link
		font-family: 'Playfair Display', serif;
		margin 1em 0
		height 1em
		padding 1.2em 0 1.2em 0
		a
			text-decoration none
			box-shadow 9px 5px 1px #000
			text-shadow -1.8px 1.5px 12.7px rgba(0,0,0,0.7)
			padding 1em 1.4em
			background azul
			color blanco
			border-radius 5px
			&:hover
				background blanco
				color azul
	.description
		font-family: 'Playfair Display', serif;
		color azul
		text-align center
		.description-list
			margin 0
			padding 0
			text-align center
			width 100%
			.description-item
				margin 0
				padding 0
				list-style none
				p
					text-shadow -1.8px 1.5px 12.7px rgba(255,255,255,0.7)
					font-family: 'Arimo', sans-serif;
					margin 0
					color #222
					width 100%

	.description-team
		color azul
		font-style italic
		margin 1em 0 2.4em 0
	.description-Title
		font-family: 'Playfair Display', serif;
		margin 0
		text-shadow -1.8px 1.5px 12.7px rgba(0,0,0,0.6)
	.description-info
		text-align left
		width 80%
		margin 0 0.4em
	.description-imagen
		height auto
		margin 0
		width auto
		img
			box-shadow 3px 5px 1px #000
			border-radius 10%
			width 100%
			
	.description-info, .description-imagen
		vertical-align top
		display inline-block
	.description-plataforms, .description-tecnologies
		vertical-align top
		display inline-block
		width 40%



.footer
	font-family: 'Playfair Display', serif;
	color #333
	right 0
	bottom 0
	position fixed

#acerca-experiencia
	border-top 1px solid rgba(0,0,0,0.2)
	width 100%
	#acerca-bio 
		width 45%
		p
			font-family: 'Arimo', sans-serif;
			margin 0.8em
			
	#acerca-portafolio
		width 45%
		p
			font-family: 'Arimo', sans-serif;
			margin 0.8em
	#acerca-bio, #acerca-portafolio
		vertical-align top
		display inline-block
		position relative

#acerca-historial
	border-top 1px solid rgba(0,0,0,0.2)
	width 100%

	#historial
		font-family: 'Arimo', sans-serif;
		width 45%
		.fecha
			width 100%
			.año
				font-size 2em
				width 20%
			.historia
				width 60%
			.año, .historia
				vertical-align top
				display inline-block
		p
			margin 0.8em
	#mapa
		background azul
		height 300px
		width 100%
		.titulo-seccion
			color black
			margin 1em

	#ultimo-trabajo
		width 45%
		p
			font-family: 'Arimo', sans-serif;
			margin 0.8em
		#trabajos
			width 100%
			figure
				margin 0 1em
			
				display inline-block
				width 100px
				img
					width 100%
				&:hover
					padding 1em
					background azul	

	#historial, #ultimo-trabajo
		vertical-align top
		display inline-block

#acerca-principal
	background-image: url('../images/fondo.png');
	background-repeat: no-repeat;
	background-position: center;
	background-size: cover;
	display inline-block
	color blanco
	position relative
	height 160px
	overflow hidden
	text-shadow -3.8px 6.5px 5px rgba(0, 0, 0, 0.2)
	width 100%

	#acerca-titulo
		text-shadow 3.2px 4.5px 4px #000
		height 10%
		font-style italic
		top 10px
		width 100%
	#acerca-subtitulo
		text-shadow 3.2px 4.5px 4px #000
		height 10%
		font-style normal
		font-size 1.3em
		top 60px
		width 100%
		strong
			font-style italic
	#acerca-titulo, #acerca-subtitulo
		position absolute
		left 5%
#acerca-personal
	background transparent
	width 100%

	#info-habilidades
		width 28%
	#info-premios
		width 35%
		p
			font-family: 'Arimo', sans-serif;
			position relative
			left 10px
			width 100%	
			strong
				font-family: 'Playfair Display', serif;
				font-weight normal
				color azul

	#info-personal
		width 35%
		p
			font-family: 'Arimo', sans-serif
			position relative
			left 10px

	#info-habilidades,#info-personal,#info-premios
		background transparent
		display inline-block
		position relative
		vertical-align top

.titulo-seccion
	font-family: 'Playfair Display', serif;
	font-weight bold
	font-style italic
	color azul
	text-shadow -3.8px 6.5px 5px rgba(0, 0, 0, 0.2)
.marcado
	border-bottom 1px solid rgba(0,0,0,0.3)