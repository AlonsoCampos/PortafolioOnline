@import "normalize.styl"
@import "fonts.styl" 

headercolor = rgba(255,255,255,0.9)
body
	background #222
header
	background #222
	height 100%
	margin 0
	position fixed
	padding 0
	text-align center
	width 22%

	figure
		padding 0
		margin 0
		position relative
		width 100%

		figcaption
			color headercolor
			font-style italic
			text-shadow -1.8px 1.5px 12.7px rgba(0,0,0,0.7)
			span
				font-weight bold
			p
				width 100%
		img
			border 2px solid rgba(0,0,0,0.2)
			box-shadow 4px 4px 1px #000
			border-radius 50%
			width 50%


	nav
		background #222			
		width 100%
		ul 
			padding 0
			li 
				list-style none
				margin 0
				padding 0
				overflow hidden
				a
					border 1px solid rgba(255,255,255,0.2)
					color headercolor
					background #222
					display inline-block
					text-decoration none
					text-align center
					padding 0.7em 0 0.7em 0
					width 100%

					&:hover
						color black
						background #FFF
					&:before
						content ''
						padding 0 0em
						float left

	.social
		position absolute
		left 0px
		bottom 0px
		display inline-block
		width 100%
		background #FFF
			img
				width 100%
section
	background #222
	height 1000px
	position absolute
	left 22%
	width 78%

article
	position absolute 
	height 350px
	width 100%

.item-principal
	//background #0188E1
	position relative 
	background: -moz-linear-gradient(-45deg, rgba(1,136,225,0) 2%, rgba(6,127,212,0) 5%, rgba(30,87,153,0.7) 19%, rgba(26,94,163,0.8) 21%, rgba(1,136,225,1) 33%, rgba(30,87,153,1) 42%, rgba(17,109,185,1) 46%, rgba(1,136,225,1) 51%, rgba(18,108,184,1) 59%, rgba(30,87,153,1) 65%, rgba(30,87,153,1) 72%, rgba(30,87,153,1) 75%, rgba(7,126,211,1) 83%, rgba(1,136,225,0.96) 85%, rgba(21,102,175,0.8) 94%, rgba(28,91,159,0) 97%, rgba(30,87,153,0) 98%); /* FF3.6+ */
	
	figure
		background transparent
		position absolute
		bottom 0px
		right 0px
		height 100%
		margin 0
		width 550px
		
		img
			width 100%
		figcaption
			color headercolor
			position absolute
			top 50%
			left -20%
			width 428px

			p
				margin-bottom 1.5em
			a
				border 1.2px solid rgba(0,0,0,0.2)
				color headercolor
				border-radius 5%
				box-shadow 1px 2px 1px rgba(0,0,0,0.2)
				text-decoration none
				background #0188E1
				padding 1em 1.5em

			a:hover
				color black
				background #FFF
					
			h1
				font-size 1.5em


.servicios
	color headercolor
	background #222
	position relative
	top 100%
	width 100%
	height 98%
	left 0px
	overflow hidden
		
	.servicio
		text-align left
		position relative
		display inline-block
		width 24%

		.titulo-servicio
			color headercolor
			font-size 1.4em
			font-weight bold
			font-style italic
			text-align center
		.descripcion-servicio
			font-style italic
			margin 1em
			text-align left
			margin-bottom 1em
		.mas-servicio
			position absolute
			color headercolor
			border-radius 5%
			box-shadow 1px 2px 1px rgba(255,255,255,0.2)
			text-decoration none
			background #0188E1
			padding 1em 1.5em
			bottom 3.4em
			right 8px

			&:hover
				color black
				background #FFF




